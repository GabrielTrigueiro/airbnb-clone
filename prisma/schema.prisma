// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//@db.ObjectId é como se estivesse pegando o id do obj e colocando no campo do próprio objeto

//models
model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId //todo User vai ter um id único
  name String?
  email String? @unique
  emailVerified DateTime?
  hashedPassword String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  favoriteId String[] @db.ObjectId

  //relações com outros models
  accounts Account[]
  listings Listing[]
  reservations Reservation[]
}

model Account {
  id String @id @default(auto()) @map("_id") @db.ObjectId //toda conta vai ter um id único
  userId String @db.ObjectId
  type String
  provider String
  providerAccountId String
  refresh_token String? @db.String
  access_token String? @db.String
  expires_at Int?
  token_type String?
  scope String?
  id_token String? @db.String
  session_state String?

  //relações com outros models
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)//armazena o id do usuário nesse user Id

  //para a conta é necessário a combinação de dois campos únicos
  @@unique([provider, providerAccountId])
}

model Listing {
  id String @id @default(auto()) @map("_id") @db.ObjectId //toda lista vai ter um id único
  title String
  description String
  imageStc String //o path da imagem na url da nuvem vai ser uma string
  createdAt DateTime @default(now())
  category String
  roomCount Int
  bathroomCount Int
  guestCount Int
  locationValue String
  price Int

  //relações com outros models
  userId String @db.ObjectId
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  reservations Reservation[]
}

model Reservation{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  listingId String @db.ObjectId
  startDate DateTime
  endDate DateTime
  totalPrice Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  listing Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)
}

// Na modelagem de objetos na lib Prisma, a opção onDelete: Cascade significa que, quando um registro da tabela principal (tabela pai) for excluído, todas as linhas correspondentes em uma tabela secundária (tabela filho) também serão excluídas automaticamente.